# Copy to /etc/garmin-tracker.env on the server

# REQUIRED in deployment (use a long random value)
FLASK_SECRET_KEY=change_me_long_random

# Recommended when coexisting behind nginx (same IP as other apps):
# keep the app private on localhost and let nginx expose /mytrainer/
GARMIN_TRACKER_HOST=127.0.0.1
GARMIN_TRACKER_PORT=5001

# Optional (if you want a different prefix than /mytrainer)
GARMIN_TRACKER_URL_PREFIX=/mytrainer

# Optional
GARMIN_TRACKER_MODE=prod
